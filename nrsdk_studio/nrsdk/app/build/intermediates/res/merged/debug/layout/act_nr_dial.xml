<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1920" >

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="300"
        android:ellipsize="start"
        android:gravity="center|bottom"
        android:lines="1"
        android:text="张三"
        android:textColor="#ffffff"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/tvState"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100"
        android:ellipsize="start"
        android:gravity="center"
        android:lines="1"
        android:text="通话中"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1020"
        android:orientation="vertical" >

        <include layout="@layout/keyboard" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="500"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvHangUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/nr_hangup_btn"
            android:gravity="center"
            android:text=""
            android:textColor="@drawable/call_tv_bg"
            android:textSize="0sp" />

        <TextView
            android:id="@+id/tvBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvHangUp"
            android:text="@string/back"
            android:textColor="@drawable/call_tv_bg"
            android:textSize="20sp" />
    </RelativeLayout>

</LinearLayout>