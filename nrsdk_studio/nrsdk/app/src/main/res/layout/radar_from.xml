<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_radar_from"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="gone"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/send_msg_type_above_left"
        android:orientation="horizontal" 
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >

        <TextView
            android:id="@+id/textView1"
            style="@style/send_msg_type_above1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_location_radar" 
            android:drawableLeft="@drawable/radar_message"
            android:layout_marginRight="10dp"
            android:drawablePadding="10dp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/bt_send_location_msg"
        style="@style/send_msg_type_below1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4.8dp"
        android:layout_marginRight="1.3dp"
        android:text="@string/tv_send_location_msg" />

</LinearLayout>