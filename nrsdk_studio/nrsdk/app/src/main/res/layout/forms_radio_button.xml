<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/forms_arrow_right_btn"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_radio_one"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/forms_arrow_right_up_btn_bg"
        android:orientation="horizontal"
        android:padding="12dp" >

        <TextView
            android:id="@+id/tv_one"
            style="@style/style_meal_one_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/tv_one_centre"
            style="@style/style_meal_one_right_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_one"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@drawable/tick"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:id="@+id/divLine0"
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/line" />

    <RelativeLayout
        android:id="@+id/layout_radio_two"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/forms_arrow_right_center_btn_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp" >

        <TextView
            android:id="@+id/tv_two"
            style="@style/style_meal_one_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/tv_two_centre"
            style="@style/style_meal_one_right_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="100dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@drawable/tick"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:id="@+id/divLine1"
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/line" />

    <RelativeLayout
        android:id="@+id/layout_radio_three"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/forms_arrow_right_down_btn_bg"
        android:gravity="center_vertical"
        android:onClick="onClick"
        android:orientation="horizontal"
        android:padding="12dp" >

        <TextView
            android:id="@+id/tv_three"
            style="@style/style_meal_one_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/tv_three_centre"
            style="@style/style_meal_one_right_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="100dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@drawable/tick"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:id="@+id/divLine2"
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/line"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/layout_radio_four"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/forms_arrow_right_down_btn_bg"
        android:gravity="center_vertical"
        android:onClick="onClick"
        android:orientation="horizontal"
        android:padding="12dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tv_four"
            style="@style/style_meal_one_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/tv_four_centre"
            style="@style/style_meal_one_right_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="100dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@drawable/tick"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>