<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/call_radio_group"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal" >

    <RadioButton
        android:id="@+id/left_radio"
        android:layout_width="@dimen/title_radio_btn_width"
        android:layout_height="@dimen/navigation_btn_min_height"
        android:background="@drawable/title_radio_btn_left"
        android:button="@null"
        android:checked="true"
        android:gravity="center"
        android:text="@string/all"
        android:textColor="@color/white_blue"
        android:textSize="@dimen/title_min_size" >
    </RadioButton>

    <RadioButton
        android:id="@+id/right_radio"
        android:layout_width="@dimen/title_radio_btn_width"
        android:layout_height="@dimen/navigation_btn_min_height"
        android:background="@drawable/title_radio_btn_right"
        android:button="@null"
        android:gravity="center"
        android:text="@string/travelrely"
        android:textColor="@color/white_blue"
        android:textSize="@dimen/title_min_size" >
    </RadioButton>

</RadioGroup>