<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_location_set_from"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" 
    android:visibility="gone"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/send_msg_type_above_left"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_from_name_location_title"
            style="@style/send_msg_type_above1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tab_gather" />

        <TextView
            android:id="@+id/tv_from_location_address"
            style="@style/send_msg_type_above2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="6.5dp"
        android:background="@drawable/send_msg_type_centre"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="3" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@drawable/location_set_type" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingRight="5dp" >

            <TextView
                style="@style/send_msg_type_centre1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_time" />

            <TextView
                android:id="@+id/tv_from_name_location_context"
                style="@style/send_msg_type_centre2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" 
                android:paddingBottom="1dp"
                />
            
            <TextView
                android:id="@+id/tv_from_name_location_time"
                style="@style/send_msg_type_centre2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" 
                android:paddingTop="1dp"
                />
            
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/tv_from_name_location_check"
        style="@style/send_msg_type_below1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4.8dp"
        android:layout_marginRight="1.3dp"
        android:text="@string/click_to_view" />

</LinearLayout>