<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_alarm_left"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="gone" 
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/send_msg_type_above_left"
        android:orientation="vertical" >

        <TextView
            style="@style/send_msg_type_above1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alarm" />

        <TextView
            android:id="@+id/tv_from_name"
            style="@style/send_msg_type_above2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_alarm_from_centre"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="6.5dp"
        android:background="@drawable/send_msg_type_centre"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="3" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@drawable/alarm" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingRight="5dp" >

            <TextView
                style="@style/send_msg_type_centre1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trip_time" />

            <TextView
                android:id="@+id/tv_from_date"
                style="@style/send_msg_type_centre2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="1dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/tv_from_time"
                style="@style/send_msg_type_centre2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="1dp"
                android:text="TextView" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/bt_from_accept"
        style="@style/send_msg_type_below1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4.95dp"
        android:layout_marginRight="1.3dp"
        android:text="@string/accept" />

</LinearLayout>