<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/forms_arrow_right_btn"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_radio_up"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/forms_arrow_right_up_btn_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp" >

            <TextView
                android:id="@+id/tv_up_left"
                style="@style/style_meal_one_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15dp" />

            <TextView
                android:id="@+id/tv_up_centre"
                style="@style/style_meal_one_right_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_up_left"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_up_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/tick"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="20dp"
            android:background="@drawable/line_bg" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_radio_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/forms_arrow_right_center_btn_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp" >

            <TextView
                android:id="@+id/tv1_left"
                style="@style/style_meal_one_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15dp" />

            <TextView
                android:id="@+id/tv1_centre"
                style="@style/style_meal_one_right_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv1_left"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/tick"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="20dp"
            android:background="@drawable/line_bg" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_radio_2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/forms_arrow_right_center_btn_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp" >

            <TextView
                android:id="@+id/tv2_left"
                style="@style/style_meal_one_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15dp" />

            <TextView
                android:id="@+id/tv2_centre"
                style="@style/style_meal_one_right_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv2_left"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/tick"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="20dp"
            android:background="@drawable/line_bg" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_radio_down"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/forms_arrow_right_down_btn_bg"
        android:gravity="center_vertical"
        android:onClick="onClick"
        android:orientation="horizontal"
        android:padding="12dp" >

        <TextView
            android:id="@+id/tv_down_left"
            style="@style/style_meal_one_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/tv_down_centre"
            style="@style/style_meal_one_right_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_down_left"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_down_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/tick"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>