<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:orientation="horizontal"
    >
    
    <LinearLayout 
        android:id="@+id/left_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_small" 
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:background="@drawable/select_count_bg"
        >

        <FrameLayout
            android:id="@+id/frame_layout" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingRight="@dimen/padding_small"
            >
            <ImageView
            android:id="@+id/pic"
            android:layout_width="46dp"
    		android:layout_height="46dp"
    		android:scaleType="fitXY"
            >
        	</ImageView>
        	
            <FrameLayout
            android:id="@+id/frame_msg_count" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >
            <TextView
            android:id="@+id/tv_msg_count"    
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            style="@style/no_msg_read"
            /> 
            </FrameLayout>
        </FrameLayout>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/time"
            android:layout_toRightOf="@+id/frame_layout"
            android:singleLine="true"
            android:ellipsize="end"
            android:paddingRight="20dp"
            style="@style/message_list_name_text"
            android:text="name"
             >
        </TextView>

        <TextView
            android:id="@+id/msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_toLeftOf="@+id/time"
            android:layout_toRightOf="@+id/frame_layout"
            android:ellipsize="end"
            android:singleLine="true"
            style="@style/message_list_msg_text_gray"
            android:text="message"
            >
        </TextView>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/name"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/padding_small_mini"
            style="@style/message_list_msg_text_gray"
            android:text="aaaaaTimeBbbbbbbbb"
            >
        </TextView>
    </RelativeLayout>
    
    </LinearLayout>
    
    <include layout="@layout/del_right_listview_item"/>
    

</LinearLayout>